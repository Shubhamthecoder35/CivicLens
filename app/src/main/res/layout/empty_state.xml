<?xml version="1.0" encoding="utf-8"?>
<!-- Empty State Layout - Demonstrates pure LinearLayout approach -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0.5"
        android:contentDescription="No reports icon"
        android:src="@android:drawable/ic_menu_report_image"
        android:tint="@color/text_secondary" />

    <!-- Empty state title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="No Reports Yet"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Empty state description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Start reporting civic issues by\ntapping the + button below"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <!-- Action button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateFirstReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Create Your First Report"
        app:cornerRadius="8dp"
        app:icon="@android:drawable/ic_input_add" />
</LinearLayout>
